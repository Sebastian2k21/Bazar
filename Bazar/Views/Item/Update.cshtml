@model ItemViewModel

<form method="POST">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div>
        <input asp-for="IsNew" class="form-control-check" />
        <label asp-for="IsNew"></label>
        <span asp-validation-for="IsNew" class="text-danger"></span>
    </div>
    <div>
        <input asp-for="PickupInPerson" class="form-control-check" />
        <label asp-for="PickupInPerson"></label>
        <span asp-validation-for="PickupInPerson" class="text-danger"></span>
    </div>
    <div>
        <input asp-for="CourierDelivery" class="form-control-check" />
        <label asp-for="CourierDelivery"></label>
        <span asp-validation-for="CourierDelivery" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.Categories"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    


    <button class="btn btn-success">Update</button>
</form>