@using Bazar.Data.Models
@model List<Item>

<table class="table striped">
    <thed>
        <tr>
            <th>Name</th>
            <th>Price</th>
        </tr>
    </thed>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td><a asp-action="Details" asp-route-id="@item.Id">@item.Name</a></td>
                <td>@item.Price</td>
            </tr>
        }
    </tbody>
</table>